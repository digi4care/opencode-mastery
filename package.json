  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/digi4care/opencode-mastery.git"
  },
  "bugs": {
    "url": "https://github.com/digi4care/opencode-mastery/issues"
  },
  "homepage": "https://github.com/digi4care/opencode-mastery#readme",
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "mdast-util-from-markdown": "^2.0.2",
    "node-llama-cpp": "^3.16.0",
    "openai": "^6.22.0",
    "unist-util-visit": "^5.1.0",
