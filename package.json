    "test": "uv run src/skill/opencode-mastery/scripts/test-load-docs.py",
    "uv:install": "uv sync"
  },
  "keywords": [
    "opencode",
    "skill",
    "documentation",
    "knowledge-base"
  ],
  "author": {
    "name": "digi4care",
